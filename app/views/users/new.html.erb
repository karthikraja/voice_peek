<div id="main_container">
<div id="middle_box">
    <div class="middle_box_content"></div>
  </div>

<div id="middle_box_content">
    <h1>Signup for free MinutesMark Account</h1>
    <%= error_messages_for :user %>

    <% form_for :user, :url => users_path  do |f| -%>

      <p><label for="login">Login:</label>
      <%= f.text_field :login %> 
      <cite>Ex., Adamfield</cite>

      <p><label for="email">Email:</label>
      <%= f.text_field :email %>
      <cite>Ex., any@email.com. A valid email is required for an active account.</cite>

      <p><label for="password">Password:</label>
      <%= f.password_field :password %>
      <cite> Enter the password that is between 4 and 40 characters in length.</cite>

      <p><label for="password_confirmation">Confirm Password:</label>
      <%= f.password_field :password_confirmation %>
      <cite>Enter the same password as above.</cite>

      <p><%= submit_tag 'Sign up',:class=>'form_submit' %></p>
    <% end -%>
 </div>
</div>